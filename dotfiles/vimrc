" UEFI code style indentation
au BufRead,BufEnter /home/pietrushnic/src/*.{c,h,html} set cindent tabstop=2 softtabstop=2 shiftwidth=2 shiftround smartindent smarttab smarttab autoindent expandtab

" open file under coursor
nmap gf :e **/<cfile><cr>

" 80-chars column
if exists('+colorcolumn')
  set colorcolumn=80
else
  au BufWinEnter * let w:m2=matchadd('ErrorMsg', '\%>80v.\+', -1)
endif

" jquery support
au BufRead,BufNewFile jquery.*.js set ft=javascript syntax=jquery
